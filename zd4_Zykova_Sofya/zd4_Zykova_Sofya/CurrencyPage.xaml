<?xml version="1.0" encoding="utf-8" ?>
<ContentPage  xmlns="http://xamarin.com/schemas/2014/forms"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            x:Class="zd4_Zykova_Sofya.CurrencyPage"
            Title="Курсы валют">

    <ScrollView>
        <StackLayout Padding="20" Spacing="15">

            <Label Text="Курсы валют ЦБ РФ" 
                   FontSize="Title" 
                   HorizontalOptions="Center"/>

            <Frame BorderColor="LightGray" 
                   CornerRadius="10" 
                   Padding="15">
                <StackLayout Spacing="10">
                    <Label Text="Дата:" 
                           FontAttributes="Bold"
                           TextColor="Black" 
                           IsVisible="True"/>
                    <Label x:Name="dateLabel" 
                           Text="01.01.2023"
                           FontAttributes="Bold"
                           TextColor="Black" 
                           IsVisible="True"/>

                    <Label Text="USD:" 
                           FontAttributes="Bold"
                           TextColor="Black" 
                           IsVisible="True"/>
                    <Label x:Name="usdLabel" 
                           Text="80.00 ₽"
                           TextColor="Black" 
                           IsVisible="True"/>

                    <Label Text="EUR:" 
                           FontAttributes="Bold"
                           TextColor="Black" 
                           IsVisible="True"/>
                    <Label x:Name="eurLabel" 
                           Text="90.00 ₽"
                           TextColor="Black" 
                           IsVisible="True"/>

                    <Button Text="Обновить курсы" 
                            Clicked="OnUpdateRatesClicked"
                            BackgroundColor="#4CAF50"
                            TextColor="White"/>
                </StackLayout>
            </Frame>

        </StackLayout>
    </ScrollView>

</ContentPage>
